<h1>Tree#show</h1>
<div>
  <h4><%= @tree.name %></h4>
  <b> Tree Structure </b><br/> <br/>
  <div class="tree">
    <% @tree.top_level_nodes.each do |node| %>
      <%= render partial: 'nodes/details', locals: {node: node} %>
    <% end %>
    <%= render partial: 'nodes/form', locals: {node: Node.new, tree: @tree, parent: nil} %>
  </div>

</div>
